<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
  
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand">Users Posts</a>
        <a class="nav-link active" aria-current="page" href="/home">Home</a>
        <form class="d-flex" role="search" method="get" action="/admin/post">
          <input class="form-control me-2" type="search" placeholder="Search by Post" name="name">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <table class="table">
        <thead>
            
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Caption</th>
            <th scope="col">Likes</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% posts.forEach(el=>{ %>
                <tr>
                    <td><%= number++ %></td>
                    <td><img src="<%= el.imageUrl %>" style="height: 200px ; width: 300px;" ></td>
                    <td><%= el.title %></td>
                    <td><%= el.content %></td>
                    <td><%= el.likes %></td>
                    <td>
                      <a href="/posts/<%= el.id %>/delete" class="btn btn-danger">Delete</a>
                    </td>
                  </tr>
                <% }) %>
        </tbody>
      </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>