<!DOCTYPE html>
<html>
<head>
  <title>My Social Media</title>
  <link rel="stylesheet" type="text/css" href="sosmed.css" >
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home">Connectify</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/profile/<%= UserId %>">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addPost">Create Post</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          
        </div>
      </div>
    </nav>
  </header>
<form style="margin-inline: 20px;" class="d-flex" method="get" action="/home">
  <input class="form-control me-2" type="search" placeholder="Search posts by profile name .." name="searchKey">
  <button class="btn btn-outline-success" type="submit">Search</button>
</form>
<br>
    <% posts.forEach(post=>{ %>
    <div class="post">
      <div class="user-info">
        <img src="<%= post.User.Profile.picture %>" alt="profile Picture">
        <h2><a href="/profile/<%= post.User.Profile.id %>" style="color: inherit;
          text-decoration: none;"><%= post.User.Profile.name %></a></h2>
      </div>
      <img src="<%= post.imageUrl %>" alt="Post Image">
      <div class="post-actions">
        <a href="/posts/<%= post.id %>/like">Like<i class="far fa-heart"></i></a>
            <a href="#">Comment<i class="far fa-comment"></i></a>
      </div>
     
      <p class="likes"><%= post.likes %></p>
      <p class="caption"><strong><%= post.User.Profile.name %></strong> <%= post.content %></p>
      <p class="comments">View all 5 comments</p>
      <p class="time"><%= formatPublished(post.createdAt) %></p>
    </div>
    </div>
    <% }) %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
